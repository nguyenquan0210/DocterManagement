<div class="container-fluid my-3 py-3">
    <div class="row mb-5">
        <div class="col-lg-12 mt-lg-0 mt-4">

           <form asp-action="Create" enctype="multipart/form-data" method="post">
                @Html.AntiForgeryToken()
                <div class="card mt-4" id="basic-info">
                    <div class="card-header">
                        <h5>Thêm Tài khoản</h5>
                        <p class="text-sm mb-0">
                            Tài khoản nhân viên.
                        </p>
                    </div>

                    @if (TempData["AlertMessage"] != null)
                    {

                        <div id="AlertBox" data-notify="container" class="col-xs-12 col-sm-12 alert @TempData["AlertType"] alert-with-icon hide1" role="alert" data-notify-position="top-center" style="">

                            <span data-notify="title"></span> <span data-notify="message">@TempData["AlertMessage"]</span>
                            <a href="#" target="_blank" data-notify="url"></a>
                        </div>

                        <style>
                            .seachvisble {
                                display: none;
                            }
                        </style>
                    }
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="multisteps-form__input form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>
                        <div class="col-6">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="multisteps-form__input form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>

                        </div>

                    </div>
                     <div class="row ">

                        <div class="col-6">
                              
                            <label asp-for="LocationId" class="control-label "></label>
                                <select asp-for="LocationId" asp-items="ViewBag.Location" class= "multisteps-form__input form-control" >
                                    <option>-- Chọn phòng khám --</option>
                                </select>
                                <span asp-validation-for="LocationId" class="text-danger"></span>
                            </div>
                        <div class="col-6">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="multisteps-form__input form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>

                        </div>    
                         
                            
                        </div>
                    <div class="row">
                        <div class="col-6">
                            <label asp-for="ImgLogo" class="form-label "></label>
                            <input asp-for="ImgLogo" class="multisteps-form__input form-control" />
                            <span asp-validation-for="ImgLogo" class="text-danger"></span>

                        </div>
                         <div class="col-2 text-center mt-4 ">
                               <img id="src_img" class="w-100 border-radius-lg shadow-lg mx-auto" src="" alt="">
                         </div>
                    </div>

                  
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="ImgClinics" class="form-label mt-4"></label>
                            <input  asp-for="ImgClinics"  class="multisteps-form__input form-control"   />
                            <span asp-validation-for="ImgClinics" class="text-danger"></span>
                        </div>
                        <div class="col-8  " >
                            <div class="row form-control dropzone dz-clickable dz-started mt-5" id="listImg">
                                <div class="dz-preview dz-processing dz-image-preview dz-error dz-complete">
                                  <div class="dz-image"><img data-dz-thumbnail="" alt="" src=""></div>
                                  <div class="dz-details"><div class="dz-size"></div><div class="dz-filename"></div></div>
                                  
                                </div>
                            </div>
                               
                         </div>

                        
                    </div>
                   
                    <button class="btn bg-gradient-dark btn-sm float-end mt-6 mb-0">Tạo</button>
                </div>
                </div>
           </form>

       
        </div>
    </div>

</div>

@section jsFooter{
    <script src="~/js/plugins/quill.min.js"></script>
    <script src="~/js/plugins/flatpickr.min.js"></script>
   
    <script>
        if (document.getElementById('LocationId')) {
            var clinic = document.getElementById('LocationId');
            const example = new Choices(clinic);
        }
    
    </script>
    <script>
       
        $("#ImgLogo").change(function (event) {
            var file = event.target.files;
            $("#src_img").attr("src", window.URL.createObjectURL(file[0]));
        });
        $("#ImgLogo").change(function () {
            var file = $('#ImgLogo').val();
            $("#ImgLogo").attr("value", file.slice(12));
        });
       $("#ImgClinics").change(function (event) {
            var files = event.target.files;
            $("#listImg").empty();
            for(let i = 0; i < files.length; i++){
                var mgabyte = files[i].size / 1000000 ;
                var fileName = files[i].name;
                var img = "<div class='col-3 mt-4'><img id='src_imgs_" + i + "' class='col-2 w-100 border-radius-lg shadow-lg mx-auto' src='' alt=''> </div>"
                var lImg = "<div class='col-3  dz-preview dz-processing dz-image-preview dz-error dz-complete'>"
                      +"<div class='dz-image'><img id='src_imgs_" + i + "' class='col-2 w-100 border-radius-lg shadow-lg mx-auto' data-dz-thumbnail alt='' src=''></div>"
                      +"<div class='dz-details' style='left: -15px;'><div class='dz-size'><span data-dz-size=''><strong>"
                      +"<font style='vertical-align: inherit;'><font style='vertical-align: inherit;'>" + mgabyte.toFixed(3) + "</font></font></strong>"
                      +"<font style='vertical-align: inherit;'><font style='vertical-align: inherit;'> MB</font></font></span></div>"
                      +"<div class='dz-filename'>"
                      +"<span data-dz-name=''><font style='vertical-align: inherit;'><font style='vertical-align: inherit;'>"+fileName+"</font></font></span></div></div>"
                      +"<div class='dz-progress'><span class='dz-upload' data-dz-uploadprogress='' style='width: 100%;'></span></div></div>"
                $("#listImg").append(lImg);
                $("#src_imgs_"+i).attr("src", window.URL.createObjectURL(files[i]));
            }
            //$("#src_imgs").attr("src", window.URL.createObjectURL(files[0]));
        });

    </script>

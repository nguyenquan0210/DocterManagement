@section Search{
<form asp-action="Index" method="get">
	<div class="input-group">
		<button type="submit" class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></button>
		<input name="keyword" type="text" class="form-control" placeholder="Type here..." value="@ViewBag.Keyword">
	</div>
</form>
}
<div class="container-fluid py-4">
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<h5 class="mb-4">Chi tiết lịch khám</h5>
					<div class="row">
						<div class="col-xl-3 col-lg-3  mt-5 " >
							<h4 style="display: flex;" class="mt-lg-0 mt-4">@Model.CheckInDate.DayOfWeek, <span> @Model.CheckInDate.ToShortDateString()</span></h4>
							
							<br />
							<span class="badge   @(Model.IsDeleted == false ? "badge-success" : "badge-warning ")">
								@(Model.IsDeleted == false ? "Đang hoạt động" : "đã khóa")
							</span>
						
						
					</div>
					<div class="col-lg-6 mx-auto">
						<h6 class="mb-0 mt-3">Số lượng</h6>
						<h5>@Model.Qty</h5>
						<div class="row mt-4">
							<div class="col-lg-6 mt-lg-0 mt-2">
								<label>Thời gian từ</label>
								<p class="form-control">
									@Model.FromTime
								</p>
							</div>
							<div class="col-lg-6 mt-lg-0 mt-2">
								<label>Đến thời gian</label>
								<p class="form-control">
									@Model.ToTime
								</p>
							</div>
						</div>
						<div class="row mt-4">
							<div class="col-lg-5">
								<a class="btn bg-gradient-primary mb-0 mt-lg-auto w-100" asp-action="Update" asp-route-id="@Model.Id">chỉnh sửa</a>
							</div>
						</div>
					</div>
				</div>
				<div class="row mt-5">
					<div class="col-12">
						<h5 class="ms-3">Chi tiết thời gian lịch khám</h5>
						<div class="table table-responsive">
							<table class="table align-items-center mb-0">
								<thead>
									<tr>
										<th class="text-uppercase  text-xxs font-weight-bolder opacity-7">Thứ</th>
										<th class="text-uppercase  text-xxs font-weight-bolder opacity-7 ps-2">Ngày khám</th>
										<th class="text-uppercase  text-xxs font-weight-bolder opacity-7 ps-2">Thời gian từ</th>
										<th class="text-uppercase  text-xxs font-weight-bolder opacity-7 ps-2">Đến thời gian</th>
										<th class="text-uppercase  text-xxs font-weight-bolder opacity-7 ps-2">Tổng thời gian</th>
										<th class="text-uppercase  text-xxs font-weight-bolder opacity-7 ps-2">Đặt khám</th>
										<th class="text-uppercase  text-xxs font-weight-bolder opacity-7 ps-2">Tình trang</th>
										<th class="text-uppercase  text-xxs font-weight-bolder opacity-7 ps-2">Xóa</th>
									</tr>
								</thead>
								<tbody>
										@if(Model.ScheduleDetailts != null)
										{
											var minutes = new TimeSpan();
											foreach(var item in Model.ScheduleDetailts)
											{
												minutes = item.ToTime - item.FromTime;
											<tr>
												<td>
													<h6 class="mb-0 text-sm">@Model.CheckInDate.DayOfWeek</h6>
													
												</td>
												<td>
													<p class="text-sm text-secondary mb-0">@Model.CheckInDate.ToShortDateString()</p>
												</td>
												<td>
													<p class="text-sm text-secondary mb-0">@item.FromTime</p>
												</td>
												<td>
													<p class="text-sm text-secondary mb-0">@item.ToTime</p>
												</td>
												<td>
													<p class="text-sm text-secondary mb-0">@(minutes.Minutes + (minutes.Hours * 60)) phút</p>
												</td>
												<td>
													<span class="badge @(item.IsBooked ? "badge-success" : "badge-warning") badge-sm" >@(item.IsBooked ? "đã đặt" : "chưa đặt")</span>
												</td>
												<td>
													<span class="badge @(item.IsDeleted == false ? "badge-success" : "badge-danger") badge-sm" id="status_@item.Id">@(item.IsDeleted == false ? "Hoạt động" : "đã khóa")</span>
													
												</td>
												<td class="text-sm">
													
													<div class="form-check form-switch ps-0">
														<input type="checkbox" @(Model.IsDeleted == false ? "checked" : "") class="form-check-input mt-1 ms-auto " />
													</div>
												</td>
											</tr>
											}
										}
										
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

</div>

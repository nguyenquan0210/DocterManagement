<div class="container-fluid my-3 py-3">
    <div class="row mb-5">
        <div class="col-lg-12 mt-lg-0 mt-4">

           <form asp-action="Create" enctype="multipart/form-data" method="post">
                @Html.AntiForgeryToken()
                <div class="card mt-4" id="basic-info">
                    <div class="card-header">
                        <h5>Thêm Tài khoản</h5>
                        <p class="text-sm mb-0">
                            Tài khoản nhân viên.
                        </p>
                    </div>

                    @if (TempData["AlertMessage"] != null)
                    {

                        <div id="AlertBox" data-notify="container" class="col-xs-12 col-sm-12 alert @TempData["AlertType"] alert-with-icon hide1" role="alert" data-notify-position="top-center" style="">

                            <span data-notify="title"></span> <span data-notify="message">@TempData["AlertMessage"]</span>
                            <a href="#" target="_blank" data-notify="url"></a>
                        </div>

                        <style>
                            .seachvisble {
                                display: none;
                            }
                        </style>
                    }
                <div class="card-body pt-0">
                    <div class="row" id="mainselect">
                        <div class="col-4">
                            <label asp-for="WeekDay" class="form-label"></label>
                            <select  asp-for="WeekDay"  asp-items="@ViewBag.WeekDay" class= "multisteps-form__input form-control" >
                                    <option>-- Chọn ngày trong tuân --</option>
                            </select>
                            <span asp-validation-for="WeekDay" class="text-danger"></span>

                        </div>
                        <div class="col-4">
                            <label asp-for="FromDay" class="form-label"></label>
                            <input asp-for="FromDay" readonly class="multisteps-form__input form-control flatpickr" />
                            <span asp-validation-for="FromDay" class="text-danger"></span>

                        </div>
                       <div class="col-4">
                            <label asp-for="ToDay" class="form-label"></label>
                            <input asp-for="ToDay" type = "text" class="multisteps-form__input form-control" />
                            <span asp-validation-for="ToDay" class="text-danger"></span>

                        </div>

                    </div>
                    <div class="row ">
                         <div class="col-5">
                            <label asp-for="FromTime" class="form-label"></label>
                            <input asp-for="FromTime" class="multisteps-form__input form-control datetimepicker" />
                            <span asp-validation-for="FromTime" class="text-danger"></span>

                        </div>
                        <div class="col-5">
                            <label asp-for="ToTime" class="form-label"></label>
                            <input asp-for="ToTime" class="multisteps-form__input form-control datetimepicker" />
                            <span id="errorTime"class="text-danger" ></span>
                            <span asp-validation-for="ToTime" class="text-danger"></span>
                        </div>  
                        <div class="col-2" >
                            <label asp-for="Qty" class="form-label"></label>
                            <input asp-for="Qty" class="multisteps-form__input form-control" />
                            <span asp-validation-for="Qty" class="text-danger"></span>   
                        </div>
                    </div>
                   
                   
                    <button class="btn bg-gradient-dark btn-sm float-end mt-6 mb-0">Tạo</button>
                </div>
                </div>
           </form>

       
        </div>
    </div>

</div>


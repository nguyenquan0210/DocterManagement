                    //alertText('.wrapper-otp .text-danger', '');

                    if (element.nextElementSibling) {
                        element.nextElementSibling.focus();
                    }
                    var checktime = timeHtml.innerHTML;
                    if(checktime == "Thử lại (00:00s)")
                    {
                        $submit.attr("disabled", true);
                    }else{
                        $submit.removeAttr("disabled");
                    }
                    
                } else {
                    $submit.attr("disabled", true);
                    //alertText(
                     //   '.wrapper-otp .text-danger',
                      //  'Nhập một số vào mỗi trường'
                    //);
            
                }
                var inputOtp = document.querySelectorAll(".ng-otp-input-wrapper .otp-input");
                inputOtp.forEach(function(item) {
                        if(item.value == "" ) $submit.attr("disabled", true);
                })
            });
        });
        function alertText(element, text) {
            document.querySelector(`${element}`).textContent = text;
        }

        function startTimer(duration, display) {
            var timer = duration, minutes, seconds;
            setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                display.textContent = "Thử lại (" + minutes + ":" + seconds + "s)";
                
                if (--timer < 0) {
                    timer = 0;
                    $submit.attr("disabled", true);
                }
            }, 1000);
        }
        function resetOtp() {
          var fiveMinutes = 60 * 2, elem = document.querySelector('#time');
          if (elem) {
              var checktime = timeHtml.innerHTML;
              if(checktime == "Thử lại (00:00s)")
              {
                  var empId = $("#PhoneNumber").val();
                  $.ajax({
                    url: "/Login/ResetOtp",
                    data: { phoneNumber: empId},
                    dataType: "json",
                    type: "POST",
                    success: function (result) {
                        if (result.response == 1) {
                              elem.innerHTML = "Không cho phép đặt khám";
                              startTimer(fiveMinutes, elem);
                        } else if (result.response == 2) {
                              elem.innerHTML = "Cho phép đặt khám";
                        }else{
                            elem.innerHTML = "Không thực hiện được chức năng này.";
                        }
                    }
                  })
                  
              }
              
          }
        }

        window.onload = function () {
            var fiveMinutes = 60 * 2,
                display = document.querySelector('#time');
            startTimer(fiveMinutes, display);
        };
    </script>
